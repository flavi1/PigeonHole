{
    "name": "flavi1/pigeonhole",
    "type": "library",
    "description": "A consistant and simple way to organize your classes, singletons, and other ressources. Can be used as a router.",
    "keywords": [
        "flavi1",
        "pigeonhole"
    ],
    "homepage": "https://github.com/flavi1/pigeonhole",
    "license": "MIT",
    "authors": [
        {
            "name": "Flavien Guillon",
            "email": "flavien.guillon@gmail.com",
            "homepage": "https://flavieng.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~8.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "flavi1\\pigeonhole\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "flavi1\\pigeonhole\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
